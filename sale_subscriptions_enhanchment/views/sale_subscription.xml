<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_subscription_view_form_inherited_form" model="ir.ui.view">
        <field name="name">sale.subscription.form</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="end_date"/>
                <field name="freez_duration"/>
<!--                <field name="new_end_date"/>-->
<!--                <field name="last_state"/>-->
<!--                <field name="un_freez_date"/>-->
            </xpath>

            <xpath expr="//button[3]" position="after">
                <field name="is_freez" invisible="1"/>
                <button string="Freezing" name="action_freez" type="object"  class="btn-primary" attrs="{'invisible': [('is_freez', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>