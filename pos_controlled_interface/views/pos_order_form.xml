<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="control_pos_interface" model="ir.ui.view">
        <field name="name">Control POS</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')][8]" position="inside">
                <h2>Control POS Interface</h2>
                    <group name="control_interface">
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="control_discount"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="control_discount"/>
                                </div>
                                </div>
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="control_price"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="control_price"/>
                                </div>
                                </div>
                        </div>
                    </group>
            </xpath>
        </field>
    </record>
</odoo>
